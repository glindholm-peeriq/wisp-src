#
# makefile for the wisp library on MSDOS platforms.
# Builds the WISPRTS.EXE installf library.
#
# NOTE: Use the C700\BIN\LINK.EXE version of LINK not the COBOL version.
#

!include $(WISP)\src\port\dosmake.inc

EXE=WISPRTS.EXE
LIBPATHS= $(STDLIB)\WISP.LIB $(STDLIB)\VIDEO.LIB
AFLAGS= /Cp /Cx

all:    $(STDBIN)\$(EXE)

$(STDBIN)\$(EXE):       $(EXE)
	copy $(EXE) $@

$(EXE): wisprts.obj $(LIBPATHS)
	LINK @WISPRTS.LRF

wisprts.obj:    wisprts.asm
